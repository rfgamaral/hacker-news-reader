{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "jsx": "react",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2020"
    ],
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist/",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "classnameTransform": "camelCaseOnly",
          "customMatcher": "\\.css$"
        }
      }
    ],
    "removeComments": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./.cache/**/*",
    "./coverage/**/*",
    "./dist/**/*",
    "./*.config.js"
  ]
}

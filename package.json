{
  "name": "hacker-news-reader",
  "description": "A basic Hacker News reader application for exceptionally impatient users.",
  "version": "1.0.0",
  "author": {
    "name": "Ricardo Amaral",
    "email": "hello@ricardoamaral.net"
  },
  "license": "MIT",
  "private": true,
  "repository": "https://github.com/rfgamaral/hacker-news-reader",
  "pwaManifest": {
    "name": "Hacker News Reader",
    "shortName": "HN Reader",
    "generateIconOptions": {
      "baseIcon": "./resources/y-combinator-logo.svg",
      "genFavicons": true
    }
  },
  "scripts": {
    "build": "run-s clean check parcel:build workbox:generate",
    "check": "run-s check:*",
    "check:eslint": "eslint './src/**/*.{js,jsx,ts,tsx}'",
    "check:typescript": "tsc --noEmit",
    "clean": "run-s clean:*",
    "clean:cache": "rimraf ./.cache",
    "clean:coverage": "rimraf ./coverage",
    "clean:dist": "rimraf ./dist",
    "parcel:build": "parcel build ./src/index.html --out-dir ./dist",
    "parcel:serve": "parcel serve ./src/index.html --out-dir ./dist --host localhost.ricardoamaral.dev --cert ./config/ssl/certificate.cer --key ./config/ssl/private.key",
    "start": "run-s clean parcel:serve",
    "test": "run-s test:once",
    "test:once": "jest --coverage",
    "test:watch": "jest --watch",
    "vercel:development": "vercel",
    "vercel:production": "vercel --prod",
    "workbox:generate": "workbox generateSW workbox.config.js"
  },
  "alias": {
    "react-dom": "@hot-loader/react-dom"
  },
  "dependencies": {
    "@hot-loader/react-dom": "16.13.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-hot-loader": "4.12.21",
    "tailwindcss": "1.6.2"
  },
  "devDependencies": {
    "@babel/core": "7.11.1",
    "@babel/preset-env": "7.11.0",
    "@babel/preset-react": "7.10.4",
    "@rfgamaral/eslint-config-typescript-unified": "3.3.0",
    "@testing-library/jest-dom": "5.11.3",
    "@testing-library/react": "10.4.8",
    "@testing-library/react-hooks": "3.4.1",
    "@tsconfig/recommended": "1.0.1",
    "@types/css-modules": "1.0.0",
    "@types/jest": "26.0.9",
    "@types/react": "16.9.46",
    "@types/react-dom": "16.9.8",
    "eslint": "7.6.0",
    "eslint-plugin-jest": "23.20.0",
    "husky": "4.2.5",
    "identity-obj-proxy": "3.0.0",
    "jest": "26.3.0",
    "lint-staged": "10.2.11",
    "msw": "0.20.5",
    "npm-run-all": "4.1.5",
    "parcel-bundler": "1.12.4",
    "parcel-plugin-pwa-manifest": "3.0.10",
    "postcss-modules": "3.2.0",
    "postcss-preset-env": "6.7.0",
    "posthtml-expressions": "1.4.5",
    "prettier": "2.0.5",
    "react-test-renderer": "16.13.1",
    "rimraf": "3.0.2",
    "stylelint": "13.6.1",
    "stylelint-config-css-modules": "2.2.0",
    "stylelint-config-rational-order": "0.1.2",
    "stylelint-config-standard": "20.0.0",
    "stylelint-order": "4.1.0",
    "ts-jest": "26.2.0",
    "typescript": "3.9.7",
    "typescript-plugin-css-modules": "2.4.0",
    "vercel": "19.2.0",
    "workbox-cli": "5.1.3"
  }
}
